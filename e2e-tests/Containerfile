FROM quay.io/konflux_ui_qe/konflux-ui-tests-base:5.8.0

RUN curl -LO "https://dl.k8s.io/release/$(curl -L -s https://dl.k8s.io/release/stable.txt)/bin/linux/amd64/kubectl" && \
    install -o root -g root -m 0755 kubectl /usr/local/bin/kubectl

RUN wget "https://github.com/sigstore/cosign/releases/download/v2.6.1/cosign-linux-amd64" && \
    mv cosign-linux-amd64 /usr/local/bin/cosign && \
    chmod +x /usr/local/bin/cosign

# Install yarn globally (as root before switching users)
RUN npm install -g yarn

USER node:0

COPY --chown=node:root --chmod=755 package.json yarn.lock /tmp/e2e/

RUN cd /tmp/e2e && \
    umask 0002 && \
    yarn install --frozen-lockfile && \
    yarn cache clean

COPY --chown=node:root --chmod=775 . /tmp/e2e
RUN chmod -R 775 /tmp/e2e

# Install Cypress and set up directories
RUN cd /tmp/e2e && \
    node_modules/.bin/cypress install && \
    mkdir -p /tmp/artifacts && \
    chmod -R a+rwx /tmp/artifacts ${CYPRESS_CACHE_FOLDER}

WORKDIR /tmp/
COPY --chown=node:root --chmod=775 entrypoint.sh /tmp/

ENTRYPOINT ["/tmp/entrypoint.sh"]
CMD [""]
