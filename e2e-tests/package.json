{
  "name": "@konflux-ui/e2e-tests",
  "version": "0.0.1",
  "description": "Konflux UI Cypress tests",
  "private": true,
  "scripts": {
    "clean-reports": "rm -rf cypress/",
    "cy:run": "cypress run -b chrome --spec 'tests/basic-happy-path.spec.ts'",
    "cy:run:coverage": "cypress run -b chrome --env coverage=true",
    "cy:open": "cypress open",
    "cy:open:coverage": "cypress open --env coverage=true",
    "coverage:report": "nyc report --reporter=html --reporter=text --reporter=lcov",
    "coverage:merge": "nyc merge .nyc_output coverage/coverage.json",
    "cy:run:features": "cypress run -b chrome --spec 'tests/features.spec.ts'"
  },
  "devDependencies": {
    "@cypress/code-coverage": "3.14.7",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "17.0.45",
    "axe-core": "^4.10.2",
    "cypress": "15.8.2",
    "cypress-axe": "^1.6.0",
    "cypress-high-resolution": "^1.0.0",
    "cypress-mochawesome-reporter": "3.8.4",
    "cypress-multi-reporters": "1.6.4",
    "cypress-terminal-report": "7.1.0",
    "deepmerge": "^4.3.1",
    "eslint-config-prettier": "9.1.2",
    "eslint-plugin-cypress": "4.3.0",
    "fs-extra": "^11.2.0",
    "mocha-junit-reporter": "^2.2.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^17.1.0",
    "otplib": "^12.0.1",
    "prettier": "^3.7.4",
    "typescript": "^5.7.2"
  },
  "nyc": {
    "report-dir": "coverage",
    "reporter": ["text", "html", "lcov", "json"],
    "all": true,
    "include": ["../src/**/*.{ts,tsx}"],
    "exclude": [
      "**/*.spec.ts",
      "**/*.spec.tsx",
      "**/*.test.ts",
      "**/*.test.tsx",
      "**/node_modules/**",
      "**/__tests__/**",
      "**/__mocks__/**"
    ]
  }
}
